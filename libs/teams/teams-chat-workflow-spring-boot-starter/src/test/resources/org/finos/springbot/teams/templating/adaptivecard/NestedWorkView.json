{
  "$schema" : "http://adaptivecards.io/schemas/adaptive-card.json",
  "version" : "1.3",
  "type" : "AdaptiveCard",
  "body" : [ {
    "type" : "Container",
    "style" : "emphasis",
    "items" : [ {
      "type" : "Container",
      "items" : [ {
        "type" : "TextBlock",
        "text" : "A",
        "wrap" : true
      }, {
        "type" : "Container",
        "style" : "default",
        "items" : [ {
          "type" : "Container",
          "style" : "emphasis",
          "items" : [ {
            "type" : "Container",
            "items" : [ {
              "type" : "TextBlock",
              "text" : "S",
              "wrap" : true
            }, {
              "type" : "Container",
              "style" : "default",
              "items" : [ {
                "type" : "TextBlock",
                "text" : "${if(form.a.s,(form.a.s),'')}"
              } ]
            } ]
          } ]
        } ]
      } ]
    }, {
      "type" : "Container",
      "items" : [ {
        "type" : "TextBlock",
        "text" : "B",
        "wrap" : true
      }, {
        "type" : "Container",
        "style" : "default",
        "items" : [ {
          "type" : "Container",
          "style" : "emphasis",
          "items" : [ {
            "type" : "Container",
            "items" : [ {
              "type" : "TextBlock",
              "text" : "S",
              "wrap" : true
            }, {
              "type" : "Container",
              "style" : "default",
              "items" : [ {
                "type" : "TextBlock",
                "text" : "${if(form.b.s,(form.b.s),'')}"
              } ]
            } ]
          } ]
        } ]
      } ]
    } ]
  } ]
}